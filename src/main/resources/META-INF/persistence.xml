<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="buffet">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>org.example.ttps2024grupo15.model.carrito.Compra</class>
    <class>org.example.ttps2024grupo15.model.carta.CartaDelDia</class>
    <class>org.example.ttps2024grupo15.model.carta.CartaSemanal</class>
    <class>org.example.ttps2024grupo15.model.carta.producto.Comida</class>
    <class>org.example.ttps2024grupo15.model.carta.producto.Menu</class>
    <class>org.example.ttps2024grupo15.model.sugerencia.Sugerencia</class>
    <class>org.example.ttps2024grupo15.model.usuario.Alumno</class>
    <class>org.example.ttps2024grupo15.model.usuario.Administrador</class>
    <class>org.example.ttps2024grupo15.model.usuario.ResponsableDeTurno</class>
    <properties>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="hibernate.connection.password" value="root"/>
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/buffetttps2024"/>
      <property name="hibernate.connection.username" value="root" />
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
